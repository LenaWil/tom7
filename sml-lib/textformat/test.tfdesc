
message N (node) =
  field id : int
  field x : int
  field y : int
  field n (name) : string
  field awesome : bool
  field r (root) : (int * int) option
  field p (parent) : tesselation option
  (* These are the IDs of the other nodes. *)
  field t (triangles) : (int * int) list

message S (tesselation) =
  field ns (nodes) : node list
    hint vertical
  field c (conclusion) : string
