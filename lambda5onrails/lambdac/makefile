
default : lambdac

WIN_MLTON_FLAGS = @MLton max-heap 300M --
MLTON_FLAGS = -verbose 1 -expert true
# takes forever to compile with profiling on
# -profile time
#  -prefer-abs-paths true -show-def-use lambdac.basis.du


# lambdac.exe : lambdac
#	rm -f lambdac.exe
#	cp lambdac lambdac.exe

lambdac : makefile lambdac.cm *.sml ast/*.sml codegen/*.sml js/*.sml js/lib/*.sml front/*.sml el/*.sml parser/*.sml util/*.sml cps/*.sml il/*.sml ../../sml-lib/util/*.sml ../../sml-lib/algo/*.sml bytecode/*.sml
	-mlton $(MLTON_FLAGS) lambdac.cm
#	grep -v basis lambdac.basis.du > lambdac.du

clean :
	rm -rf `find . -name "*~"` `find . -type d -name .cm` *.exe lambdac *.du mlmon.out
	rm -f bugs/*.b5 bugs/*.js 
	rm -f regression/*.b5 regression/*.js 
	rm -f bench/*.b5 bench/*.js

wc :
	find . -name "*.sml" | grep -v CM | grep -v \\.cm | xargs wc -l

linelen :
	linelen `find . -name "*.sml" | grep -v CM | grep -v \\.cm`
